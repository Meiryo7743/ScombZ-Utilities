{
    "manifest_version": 3,
    "name": "ScombZ Utilities",
    "version": "2.5.4",
    "action":{
        "default_title":"設定",
        "default_popup":"popup.html"
    },
    "description": "使いにくいScombZのサイドメニューやテストを修正したり、ADFSボタンの自動スキップができます。よりユーザビリティに優れたScombZを提供します。",
    "icons": { 
        "48": "icon48.png",
        "128": "icon128.png" },
    "author": "yudai1204",
    "content_scripts": [
        {
        "matches": ["https://scombz.shibaura-it.ac.jp/*","https://adfs.sic.shibaura-it.ac.jp/adfs/ls/*","http://syllabus.sic.shibaura-it.ac.jp/*"],
        "js": [ "encoding/encoding.min.js","custom.user.js"]
        }
    ],
    "permissions":["storage"]
}